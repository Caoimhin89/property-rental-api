{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2021",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "paths": {
        "*": ["node_modules/*", "src/*"]
      }
    },
    "include": ["src/**/*"]
  }